import christianImg from "@/assets/img/christian-foto.jpg";
import diegoImg from "@/assets/img/diego-foto.jpg";
import oscarImg from "@/assets/img/oscar-foto.jpg";

const team = [
  {
    name: "Christian",
    role: "Ingeniero en Informática",
    image: christianImg,
    description:
      "Ingeniero en Informática (UCR) con conocimientos en ciberseguridad y redes CISCO (CCNA). Experiencia en automatizaciones, desarrollo web y agentes de IA.",
    social: { linkedin: "#", github: "#", email: "#" },
  },
  {
    name: "Diego Reyes",
    role: "Full-Stack Developer",
    image: diegoImg,
    description:
      "Ingeniero en Informática (UCR) especializado en desarrollo web full-stack y automatizaciones inteligentes. Experiencia en aplicaciones escalables.",
    social: { linkedin: "https://www.linkedin.com/in/diego-reyes-b405a6287/", github: "https://github.com/DieReyesCar", email:"https://mail.google.com/mail/?view=cm&to=diereyescarv@gmail.com&su=Contacto%20desde%20la%20web&body=Hola%20Diego,%0A%0AMe%20gustaría%20ponerme%20en%20contacto%20contigo.%0A%0ASaludos."},
  },
  {
    name: "Oscar",
    role: "IT Infrastructure",
    image: oscarImg,
    description:
      "Ingeniero en Tecnologías de Información (UTN) especializado en infraestructura tecnológica, redes y sistemas seguros.",
    social: { linkedin: "#", github: "#", email: "#" },
  },
];
---

<section id="nosotros" class="relative py-16 sm:py-20 md:py-24 lg:py-32 overflow-hidden">
  <div class="absolute inset-0"></div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section header - Responsive -->
    <div class="text-center mb-12 sm:mb-14 md:mb-16 section-header">
      <span class="text-[#00D6A1] font-medium text-xs sm:text-sm uppercase tracking-wider"
        >NUESTRO EQUIPO</span
      >
      <h2
        class="font-heading text-2xl xs:text-3xl sm:text-4xl lg:text-5xl font-bold mt-2 sm:mt-3 mb-4 sm:mb-6 text-white px-4 sm:px-0"
      >
        ¿Quiénes <span class="text-[#00D6A1] block xs:inline mt-1 xs:mt-0">Somos?</span>
      </h2>
      <p class="text-gray-400 max-w-2xl mx-auto text-base sm:text-lg px-4 sm:px-6 lg:px-0 leading-relaxed">
        Somos un equipo de profesionales apasionados por la tecnología,
        transformando ideas en soluciones digitales innovadoras.
      </p>
    </div>

    <!-- Team grid - Responsive -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
      {
        team.map((member, index) => (
          <div
            class="group team-card"
            style={`animation-delay: ${index * 0.15}s`}
          >
            <div class="relative team-card-inner bg-white/5 backdrop-blur-xl border border-white/10 rounded-xl sm:rounded-2xl p-5 sm:p-6 text-center transition-all duration-500 hover:border-[#00D6A1]/70 hover:shadow-[0_20px_40px_rgba(0,214,161,0.1)]">
              <!-- Glow effect on hover -->
              <div class="absolute inset-0 rounded-xl sm:rounded-2xl bg-linear-to-r from-[#00D6A1]/0 via-[#00D6A1]/0 to-[#00D6A1]/0 opacity-0 group-hover:from-[#00D6A1]/20 group-hover:via-[#00D6A1]/40 group-hover:to-[#00D6A1]/20 group-hover:opacity-10 transition-all duration-500 blur-xl" />
              
              <!-- Border glow -->
              <div class="absolute inset-0 rounded-xl sm:rounded-2xl border-2 border-transparent group-hover:border-[#00D6A1]/10 transition-all duration-500 glow-border" />
              
              <div class="relative z-10">
                <!-- Image - Responsive size -->
                <div class="relative w-24 h-24 sm:w-28 sm:h-28 md:w-32 md:h-32 mx-auto mb-4 sm:mb-5 md:mb-6">
                  <div class="absolute inset-0 rounded-full bg-linear-to-br from-[#00D6A1] to-[#ed1d85] opacity-0 group-hover:opacity-100 transition-opacity duration-500 blur-lg" />
                  <img
                    src={member.image.src}
                    alt={member.name}
                    class="relative w-full h-full object-cover rounded-full border-2 border-white/20 group-hover:border-[#00D6A1]/50 transition-all duration-500"
                  />
                </div>

                <!-- Info - Responsive typography -->
                <h3 class="font-heading text-lg sm:text-xl font-semibold mb-1 text-white">
                  {member.name}
                </h3>
                <p class="text-[#00D6A1] font-medium text-xs sm:text-sm mb-3 sm:mb-4">
                  {member.role}
                </p>
                <p class="text-gray-400 text-xs sm:text-sm leading-relaxed mb-5 sm:mb-6">
                  {member.description}
                </p>

                <!-- Social - Responsive buttons -->
                <div class="flex items-center justify-center gap-3 sm:gap-4">
                  <a
                    href={member.social.linkedin}
                    class="w-9 h-9 sm:w-10 sm:h-10 rounded-full bg-white/5 border border-white/10 flex items-center justify-center text-gray-400 hover:text-[#00D6A1] hover:bg-[#00D6A1]/10 hover:border-[#00D6A1]/30 transition-all duration-300 active:scale-95"
                    aria-label={`LinkedIn de ${member.name}`}
                  >
                    <svg
                      class="w-4 h-4"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                      xmlns="http://www.w3.org/2000/svg"
                    >
                      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                    </svg>
                  </a>
                  <a
                    href={member.social.github}
                    class="w-9 h-9 sm:w-10 sm:h-10 rounded-full bg-white/5 border border-white/10 flex items-center justify-center text-gray-400 hover:text-[#00D6A1] hover:bg-[#00D6A1]/10 hover:border-[#00D6A1]/30 transition-all duration-300 active:scale-95"
                    aria-label={`GitHub de ${member.name}`}
                  >
                    <svg
                      class="w-4 h-4"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                      xmlns="http://www.w3.org/2000/svg"
                    >
                      <path d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12" />
                    </svg>
                  </a>
                  <a
        href={member.social.email}
        target="_blank"
        rel="noopener noreferrer"
       class="w-9 h-9 sm:w-10 sm:h-10 rounded-full bg-white/5 border border-white/10 flex items-center justify-center text-gray-400 hover:text-[#00D6A1] hover:bg-[#00D6A1]/10 hover:border-[#00D6A1]/30 transition-all duration-300 active:scale-95"
         aria-label={`Email de ${member.name}`}
          >
                    <svg
                      class="w-4 h-4"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                      xmlns="http://www.w3.org/2000/svg"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                      />
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<script is:inline>
  const observerOptions = {
    threshold: 0.1,
    rootMargin: "0px 0px -50px 0px",
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.add("animate-in");
        observer.unobserve(entry.target);
      }
    });
  }, observerOptions);

  document.querySelectorAll(".section-header, .team-card").forEach((el) => {
    observer.observe(el);
  });
</script>

<style>
  /* Section header animation */
  .section-header {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }

  .section-header.animate-in {
    opacity: 1;
    transform: translateY(0);
  }

  /* Team cards animation */
  .team-card {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.5s ease-out, transform 0.5s ease-out;
  }

  .team-card.animate-in {
    opacity: 1;
    transform: translateY(0);
  }

  /* Card hover effects */
  .team-card-inner {
    transform: translateY(0);
  }

  /* Desktop only hover effects */
  @media (min-width: 640px) {
    .group:hover .team-card-inner {
      transform: translateY(-8px);
    }

    .group:hover .glow-border {
      box-shadow: 
        0 0 15px rgba(0, 214, 161, 0.3),
        0 0 30px rgba(0, 214, 161, 0.2),
        inset 0 0 15px rgba(0, 214, 161, 0.05);
    }
  }

  /* Mobile optimizations */
  @media (max-width: 640px) {
    .team-card {
      transform: translateY(20px);
    }
    
    /* Faster animations on mobile */
    .team-card.animate-in {
      transition: opacity 0.4s ease-out, transform 0.4s ease-out;
    }
  }

  /* Touch devices - prevent hover stuck state */
  @media (hover: none) {
    .group:hover .team-card-inner {
      transform: translateY(0);
    }
    
    .group:active .team-card-inner {
      transform: scale(0.98);
    }

    .group:hover .glow-border {
      box-shadow: none;
    }
  }

  /* Prevent text selection on rapid taps */
  @media (max-width: 640px) {
    .team-card {
      -webkit-tap-highlight-color: transparent;
      user-select: none;
    }
  }

  /* Tablet layout optimization */
  @media (min-width: 640px) and (max-width: 1023px) {
    /* Center last card if odd number */
    .team-card:last-child:nth-child(odd) {
      grid-column: 1 / -1;
      max-width: 400px;
      margin: 0 auto;
      width: 100%;
    }
  }
</style>